clickhouse:
  hosts:
    clickhouse-vm:
      ansible_host: ${clickhouse_ip}
      ansible_user: ${vm_ssh_user}
      ansible_ssh_private_key_file: ~/.ssh/id_rsa

vector:
  hosts:
    vector-vm:
      ansible_host: ${vector_ip}
      ansible_user: ${vm_ssh_user}
      ansible_ssh_private_key_file: ~/.ssh/id_rsa

lighthouse:
  hosts:
    lighthouse-vm:
      ansible_host: ${lighthouse_ip}
      ansible_user: ${vm_ssh_user}
      ansible_ssh_private_key_file: ~/.ssh/id_rsa

all:vars:
  ansible_ssh_common_args: '-o StrictHostKeyChecking=no'