# Конфигурационный файл Vector
# Простой пример для демонстрации работы

sources:
  # Источник: демонстрационные логи (генерирует тестовые данные)
  demo_logs:
    type: demo_logs
    format: json  # Формат данных: JSON
    interval: 1.0  # Интервал генерации: 1 секунда

sinks:
  # Приёмник: вывод в консоль (stdout)
  stdout:
    type: console
    inputs:  # Какие источники использовать
      - demo_logs
    encoding:  # Кодировка вывода
      codec: json  # Формат вывода: JSON